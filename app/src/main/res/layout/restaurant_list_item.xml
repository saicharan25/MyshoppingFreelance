<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res/android"
    card_view:id="@+id/card_view"
    card_view:layout_height="wrap_content"
    card_view:layout_marginTop="5dp"
    card_view:layout_width="match_parent">

    <RelativeLayout
        card_view:background="@color/white"
        card_view:clickable="true"
        card_view:focusable="true"
        card_view:id="@+id/rl_category_item"
        card_view:layout_height="wrap_content"
        card_view:layout_width="match_parent"
        card_view:orientation="vertical"
        card_view:paddingBottom="10dp"
        card_view:paddingLeft="@dimen/activity_margin"
        card_view:paddingRight="@dimen/activity_margin"
        card_view:paddingTop="10dp">

        <android.support.v7.widget.LinearLayoutCompat
            card_view:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            card_view:layout_height="wrap_content"
            card_view:layout_width="match_parent"
            card_view:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            card_view:layout_height="match_parent"
            card_view:layout_width="match_parent"
            card_view:orientation="vertical">

            <ImageView
                card_view:id="@+id/iv_image"
                card_view:layout_height="match_parent"
                card_view:layout_width="match_parent"
                card_view:scaleType="fitXY"
                card_view:src="@mipmap/ic_launcher" />
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            card_view:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            card_view:layout_height="wrap_content"
            card_view:layout_width="match_parent"
            card_view:orientation="vertical">

            <TextView
                card_view:id="@id/title"
                card_view:layout_alignParentTop="true"
                card_view:layout_height="wrap_content"
                card_view:layout_width="match_parent"
                card_view:text="hiiiiii"
                card_view:textColor="#000000"
                card_view:textSize="@dimen/header_font_size_extra_large"
                card_view:textStyle="bold" />

            <TextView
                card_view:id="@+id/details"
                card_view:layout_alignParentRight="true"
                card_view:layout_height="wrap_content"
                card_view:layout_width="match_parent"
                card_view:text="menu"
                card_view:textSize="@dimen/header_font_size_large" />

            <TextView
                card_view:id="@+id/delivery"
                card_view:layout_below="@id/title"
                card_view:layout_height="wrap_content"
                card_view:layout_width="match_parent"
                card_view:text="Delivery in"
                card_view:textColor="@color/red"
                card_view:textSize="@dimen/header_font_size_large" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout></android.support.v7.widget.CardView>
